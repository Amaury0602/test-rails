<div class="container">
  <div class="index-actions">
    <div class="service-list">
      <% @services.each do |service| %>
        <div class="service-card-index">
          <%= render "index", service: service %>
        <div/>
        <div class="index-information">
          <button class="display-button" data-button-id="<%= service.id %>"> display </button>
          <%= render "more_info", service: service %>
        </div>
      <% end %>
    </div>
    <div class="user-action">
      <div class="create">
        <%= link_to "Create your task", new_service_path%>
      </div>
      <div class="completed-list">
        <%= link_to "See only to-do stuff", done_services_path %>
      </div>
    </div>
  </div>
</div>
